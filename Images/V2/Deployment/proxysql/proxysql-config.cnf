datadir="/var/lib/proxysql"
admin_variables=
{
    admin_credentials="admin:adminpassword"
    mysql_ifaces="0.0.0.0:6032"
}
mysql_variables=
{
    threads=4
    max_connections=2048
}
mysql_servers =
(
    { address="server1_ip", port=3306, hostgroup=10, max_connections=1000 },
    { address="server2_ip", port=3306, hostgroup=20, max_connections=1000 },
    { address="server3_ip", port=3306, hostgroup=30, max_connections=1000 },
    { address="server4_ip", port=3306, hostgroup=40, max_connections=1000 },
)
mysql_users =
(
    { username="laravel", password="your_password", default_hostgroup=10, max_connections=500 }
)
mysql_query_rules =
(
    { rule_id=1, active=1, match_pattern="^SELECT.*", destination_hostgroup=20, apply=1 },
    { rule_id=2, active=1, match_pattern=".*", destination_hostgroup=10, apply=1 }
)
